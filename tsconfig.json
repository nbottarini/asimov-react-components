{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "declaration": true,
    "declarationDir": "types",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "isolatedModules": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
